<additional>

    <!-- ================== TYPES OF VEHICLES ================== -->

    <!-- Car -->

    <routes>

        <vType id="evehicle"
            vClass="passenger"
            energyModel="electric"
            
            length="5.0"
            width="1.8"
            height="1.5"
            mass="1500"
            minGap="2.5"

            accel="2.6"
            decel="4.5"
            emergencyDecel="9.0"
            maxSpeed="33.33"

            personCapacity="4"
            guiShape="evehicle"
            emissionClass="zero">

            <param key="device.battery.probability" value="1.0"/>
            <param key="has.battery.device" value="true"/>
            <param key="device.battery.capacity" value="35000"/>
            <param key="device.battery.chargeLevel" value="17500"/>
            <param key="device.battery.maximumPowerRate" value="150000"/>
            <param key="constantPowerIntake" value="10000"/>

        </vType>

    </routes>

    <!-- Bus -->
    <vType
        id="bus"
        vClass="bus"
        accel="1.2"
        decel="4.0"
        length="12.0"
        minGap="3.0"
        maxSpeed="25.0"
        guiShape="bus"
    />

    <!-- ================== BUS STOP ================== -->

    <busStop id="checkpoint1"
             lane="pitagoras_2"
             startPos="20"
             endPos="30"
             color="255,145,4">
        <param key="emptyColor" value="1,1,1,0"/>
    </busStop>

    <busStop id="checkpoint2"
             lane="arquimedes_3"
             startPos="20"
             endPos="30"
             color="255,145,4">
        <param key="emptyColor" value="1,1,1,0"/>
    </busStop>

    <busStop id="checkpoint3"
             lane="euler_0"
             startPos="20"
             endPos="30"
             color="255,145,4">
        <param key="emptyColor" value="1,1,1,0"/>
    </busStop>

    <!-- ================== PARKING ================== -->

    <parkingArea
        id="ParkAreaA"
        lane="arquimedes_0"
        startPos="15"
        endPos="45"
        roadsideCapacity="5"
        angle="0"
        length="20"
    />

    <!-- ================== Charging Station ================== -->

    <chargingStation
        chargeDelay="2"
        chargeInTransit="0"
        power="200000"
        efficiency="0.95"
        endPos="45"
        id="Carregamento Principal"
        lane="arquimedes_0"
        startPos="25"
    />

</additional>
